<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidc22.socialmedic.TelaMenu">

    <Button
        android:text="@string/hospitais"
        android:id="@+id/btnHopitais"
        android:layout_width="280dp"
        android:layout_height="68dp"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnHopitais"
        android:layout_toStartOf="@+id/btnHopitais"
        android:layout_above="@+id/btnAvalicao"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/imageButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnHopitais"
        android:layout_toStartOf="@+id/btnHopitais"
        android:layout_below="@+id/btnMedicos"
        android:layout_alignBottom="@+id/btnFavoritos"
        tools:ignore="ContentDescription" />

    <Button
        android:text="@string/favoritos"
        android:id="@+id/btnFavoritos"
        android:layout_width="280dp"
        android:layout_below="@+id/btnMedicos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="68dp" />

    <Button
        android:text="@string/medicos"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:id="@+id/btnMedicos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="280dp"
        android:layout_height="68dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/btnMedicos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/checkbox_on_background"
        android:id="@+id/imageButton"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnHopitais"
        android:layout_toStartOf="@+id/btnHopitais"
        android:layout_alignBottom="@+id/btnAvalicao"
        tools:ignore="ContentDescription" />

    <Button
        android:text="@string/avalia_o"
        android:id="@+id/btnAvalicao"
        android:layout_width="280dp"
        android:layout_height="68dp"
        android:layout_below="@+id/btnHopitais"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfoTelaMenu"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:text="Menu Principal" />

    <Button
        android:text="@string/sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAvalicao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/btnSair"
        tools:text="Sair" />
</RelativeLayout>
