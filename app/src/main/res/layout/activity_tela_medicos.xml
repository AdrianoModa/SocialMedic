<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_medicos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidc22.socialmedic.TelaMedicos">

    <SearchView
        android:id="@+id/idBuscarMedicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtEspecHosppital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idBuscarMedicos"
        android:layout_marginTop="24dp"
        android:text="@string/m_dicos" />

    <RatingBar
        android:id="@+id/rbMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="1"
        android:layout_alignTop="@+id/btnMedico"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnMedico" />

    <Button
        android:id="@+id/btnMedico"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEspecHosppital"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Fulano da Silva Souza \nPediatra"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnMedico"
        android:layout_toLeftOf="@+id/btnMedico"
        android:layout_toStartOf="@+id/btnMedico"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

</RelativeLayout>
